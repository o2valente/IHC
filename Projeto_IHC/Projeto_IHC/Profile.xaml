<Page x:Class="Projeto_IHC.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projeto_IHC"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Profile" Height="700" Width="300">

    <Grid Background="#AA0E27">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="150"></RowDefinition>
            <RowDefinition Height="150"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Background="White" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="0,0,0,0.4" Width="25" Click="Button_Click">&lt;</Button>
        <Grid Grid.Row="1" Grid.Column="1">
            <Label Grid.Column="1" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="30" Foreground="White" >Profile</Label>
            <Image></Image>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1">
            <ListView Background="#AA0E27">
                <ListViewItem Foreground="White" FontSize="20">Name: João Carvalho</ListViewItem>
                <ListViewItem Foreground="White" FontSize="20">Birthday: 25/04/75</ListViewItem>
                <ListViewItem Foreground="White" FontSize="20">Location: Viseu</ListViewItem>
            </ListView>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="1">
            <ComboBox Background="White"  Margin="10,60,47.4,459.4">
                <ComboBoxItem>
                    <Button Style="{StaticResource RoundCorner}" HorizontalContentAlignment="Center" Width="180" Background="White" BorderBrush="White" Height="19">Miguels's Larder</Button>
                </ComboBoxItem>
                <ComboBoxItem>
                    <Button Style="{StaticResource RoundCorner}" HorizontalContentAlignment="Center" Width="181" Background="White" BorderBrush="White">Add Family Member</Button>
                </ComboBoxItem>
            </ComboBox>
            <Button Style="{StaticResource ResourceKey=RoundCorner}" Margin="10,188,47.4,316.6" Content="Settings" />
        </Grid>
    </Grid>
</Page>
